<h1>Make a <%= @cocktail.name %></h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <td><strong>Ingredient</strong></td>
      <td><strong>Description</strong></td>
      <td><strong>Delete?</strong></td>
    </tr>
  </thead>
  <tbody>
  <%  @cocktail.doses.each do |dose| %>
    <tr>
      <td><%= dose.ingredient.name %></td>
      <td><%= dose.description %></td>
      <td><%= link_to "delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1> Adding a dose </h1>

<%= simple_form_for [@cocktail, @dose] do |f|%>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.association :ingredient %>

  <%= f.submit "Add dose", class: "btn btn-primary" %>
<% end %>

<hr>

<p><%= link_to "back to all", cocktails_path %></p>

